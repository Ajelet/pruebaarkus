<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/thumbnailPlace"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            tools:background="@android:color/black">

        </ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/placeName"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                tools:text="Good Karma Artisan Ales Cafe"
                android:textSize="16sp"
                android:layout_marginTop="8dp">

            </TextView>

            <RatingBar
                android:id="@+id/ratingPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="3.5"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_marginTop="8dp"
                style = "?android:attr/ratingBarStyleSmall">

            </RatingBar>

            <TextView
                android:id="@+id/addressPlace"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                tools:text="Zona Rio Calle Padre Kino"
                android:layout_marginTop="8dp">

            </TextView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/distancePlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="45m"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                >

            </TextView>

            <ImageView
                android:id="@+id/iconPet"
                android:layout_width="35dp"
                android:layout_height="35dp"
                tools:background="@android:color/black"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                >

            </ImageView>

            <TextView
                android:id="@+id/isPetFriendly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Pet Friendly"
                android:layout_marginEnd="8dp"
                android:gravity="end"
                >

            </TextView>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:background="@color/colorLine">

    </LinearLayout>


</LinearLayout>